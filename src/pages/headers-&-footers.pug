//- используем макет(шаблон)main.pug в качестве основы
extends ../basis/layout/main

//- опишем константы для текущей страницы
block variables
  - var title = 'Headers & Footers';
  - var pageClass = 'pageClass-GreyBackground';
block head
  link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")

block content
  block var
    - var userLogin = 0;
  include ../basis/bar/bar
    block bar-content
      include ../blocks/logo-toxin/logo-toxin
      .nav-bar_wrapper-right
        .nav-bar_indent-right
          include ../blocks/navigation/navigation
        include ../blocks/user-login/user-login

  .indent.z-index
    block var
      - var userLogin = 1;
    include ../basis/bar/bar
      block bar-content
        include ../blocks/logo-toxin/logo-toxin
        .nav-bar_wrapper-right
          .nav-bar_indent-right
            include ../blocks/navigation/navigation
          include ../blocks/user-login/user-login

  include ../basis/footer-links/footer-links

  .indent-1px-top
    include ../basis/bar/bar
      block bar-content
        include ../blocks/copyright/copyright
        .indent-right-2px
          include ../blocks/social/social
